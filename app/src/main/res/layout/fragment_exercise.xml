<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    tools:context="com.g14.ucd.fitassistant.ExerciseFragment">

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_exercise_schedule"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.gc.materialdesign.views.ButtonFloat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_schedule_exe_button"
        materialdesign:iconDrawable="@drawable/ic_new_white"
        android:background="#1E88E5"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    </com.gc.materialdesign.views.ButtonFloat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/schedule_a_exercise"
        android:id="@+id/create_schedule_exe_text"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/create_schedule_exe_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.g14.ucd.fitassistant.GeneralActivityFragment">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="15"
        android:id="@+id/edittext_name_general_activity"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Description"
        android:ems="15"
        android:id="@+id/editText_description_other"
        android:visibility="invisible"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_diet"
        android:id="@+id/button_save_exercise"
        android:onClick="saveActivity"
        android:visibility="invisible"
        android:layout_below="@id/editText_description_other"
        android:layout_alignRight="@+id/editText_name_exercise"/>

</FrameLayout>

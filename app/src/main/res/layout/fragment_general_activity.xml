<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.g14.ucd.fitassistant.GeneralActivityFragment"
    android:background="@color/transparency">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="15"
        android:id="@+id/edittext_name_general_activity"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Description"
        android:ems="15"
        android:id="@+id/editText_description_other"
        android:layout_below="@+id/edittext_name_general_activity"
        android:layout_marginTop="30dp"/>

    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_diet"
        android:id="@+id/button_save_exercise"
        android:onClick="saveActivity"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/editText_description_other"
        android:layout_alignEnd="@+id/editText_description_other" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Location"
        android:focusableInTouchMode="false"
        android:ems="15"
        android:id="@+id/general_activity_location"
        android:layout_above="@+id/button_save_exercise"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

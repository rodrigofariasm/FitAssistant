<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="40dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:id="@+id/list_exercise_name"
        android:textStyle="bold"
        android:text="breakfast"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </TextView>


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="40dp"
        android:gravity="center"
        android:textSize="14sp"
        android:id="@+id/list_exercise_time"
        android:layout_above="@+id/list_meal_options"
        android:layout_alignLeft="@+id/list_meal_options"
        android:layout_alignStart="@+id/list_meal_options"
        android:textStyle="bold"
        android:text="12:40">
    </TextView>

    <com.gc.materialdesign.views.CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_exercise_done"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"/>


</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.g14.ucd.fitassistant.DietActivity"
    android:weightSum="1"
    android:id="@+id/newDiet">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="385dp"
        android:id="@+id/listView_diets"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_add_diet"
        android:layout_alignEnd="@+id/button_add_diet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/no_diet_message"
        android:id="@+id/no_diet_message"
        android:layout_alignTop="@+id/listView_diets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_diet"
        android:id="@+id/button_add_diet"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="addNewDiet"/>



</RelativeLayout>

